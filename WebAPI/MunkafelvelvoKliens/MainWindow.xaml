<Window x:Class="MunkafelvelvoKliens.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MunkafelvelvoKliens"
        mc:Ignorable="d"
        Title="Work operation window" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Order list" FontWeight="Bold" Margin="15"/>
        <ListBox x:Name="OrderListBox" Grid.Row="1" Margin="15, 0, 15, 15" SelectionMode="Single" SelectionChanged="OrderListBox_SelectionChanged"/>
        <Button Grid.Row="2" Content="Add order" Width="100" HorizontalAlignment="Right" Margin="15, 0, 15 ,15" Click="AddOrderClicked"/>

    </Grid>
</Window>
